{
    "name": "vscode-formatall",
    "displayName": "vscode-formatall",
    "description": "Opens every file that matches the lookup parameters, and applies the formatting action to them.",
    "version": "1.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "formatall.doFormat",
                "title": "Do Format"
            },
            {
                "command": "formatall.doSave",
                "title": "Do Save"
            }
        ],
        "configuration": {
            "title": "formatall configuration",
            "type": "object",
            "properties": {
                "formatall.search.include": {
                    "type": "string",
                    "default": "**/*.{css,html,js,json,jsonc,php,py,sass,scss,sh,vue,xml,yaml}",
                    "description": "The selector to use when finding files to format"
                },
                "formatall.search.exclude": {
                    "type": "string",
                    "default": "**/{.git,.vagrant,node_modules,storage,vendor}/**",
                    "description": "The selector to use to exclude files/directories from formatting"
                },
                "formatall.quantity": {
                    "type": "number",
                    "default": 10,
                    "description": "The number of files to format before saving and closing, and then moving to the next batch."
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "publisher": "sgtcoder",
    "repository": "https://github.com/sgtcoder/vscode-formatall"
}